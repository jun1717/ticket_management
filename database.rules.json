{
  "rules": {
    "todos": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid",
        "$todoId": {
          ".validate": "newData.hasChildren(['title', 'text', 'completed', '_createdAt', '_updatedAt'])",
          "title": {
            ".validate": "newData.isString()"
          },
          "text": {
            ".validate": "newData.isString()"
          },
          "completed": {
            ".validate": "newData.isBoolean()"
          },
          "_createdAt": {
            ".validate": "newData.isNumber()"
          },
          "_updatedAt": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    },
    "recentUpdatedTodos": {
      ".read": true,
      ".write": false
    },
    "$other": {
      ".validate": false
    }
  }
}